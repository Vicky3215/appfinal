<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/login.css">
<div class="container mb-5">
<div class="row no-gutters">

<div class="col-lg-5">
<img src="https://images.unsplash.com/photo-1533392151650-269f96231f65?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8NjR8fGFjdHJlc3N8ZW58MHx8MHw%3D&auto=format&fit=crop&w=500&q=60" class="img-fluid">
</div>

<div class="col-lg-7">

<form action="/register" method="POST">
<h1 class="mb-3 mt-4">REGISTER HERE</h1>


  <div class="form-group mt-3">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control p-3" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
    <div class="form-group mt-3">
    <label for="exampleInputPassword1">Username</label>
    <input type="text" class="form-control p-3 " id="exampleInputPassword1" placeholder="Username" name="username">
  </div>
  <div class="form-group mt-3">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control p-3 " id="exampleInputPassword1" placeholder="Password" name="password">
  </div>
  
  <button type="submit" class="btn btn-primary btn1 mt-3 mb-2 font-weight-bold">REGISTER</button>
  <p>Already have an account?<a href="/login">Login here</a></p>
</form>

</div>



</div>
</div>